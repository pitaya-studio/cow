@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>易牧通-登陆</title>
    <link rel="shortcut icon" href="images/emutong.ico">
    <script type="text/javascript" src="../Scripts/jquery-1.10.2.min.js"></script>
    <link rel="stylesheet" href="../bootstrap/css/bootstrap-theme1.min.css">
    <script type="text/javascript" src="../bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="../Style/base.css">
    <link href="../Style/emutong_style.css" rel="stylesheet" />
    <script type="text/javascript">
        $(function () {
            $('#btnLogin').click(function () {
                var usr = $("[name=name]").val();
                var pas = $("[name=password]").val();
                $.ajax({
                    type: 'get',
                    url: "../Login/Login",
                    cache: false,
                    data: { user: usr, password: pas },
                    dataType: "json"
                }).success(function (formulaInfo) {
                    if (formulaInfo == 1)
                    {
                        window.location.href = "../Home/Index";
                    }
                    else
                    {
                        alert("登陆失败，请确认用户名密码。");
                    }
                });                
            })
        })
    </script>
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-md-push-1 col-sm-6">
                    <a href="#" id="emutong_logo"><img src="../Images/emutong_logo.png" alt="Logo"></a>
                </div>
            </div>
        </div>
    </header>
    <section id="banner">
        <div class="inner">
            <form >
                <p> <strong>登录易牧通系统</strong></p>
                <div class="input-group mt10">
                    <span class="input-group-addon w100">用户名：</span>
                    <input type="text" class="logininput" name="name">
                </div>
              
                <div class="input-group mt10">
                    <span class="input-group-addon w100">密码：</span>
                    <input type="password" class="logininput" name="password">
                </div>
                <footer>
                    <div>
                        <input id="btnLogin" type="button" value="登录" class="btn">
                    </div>
                </footer>
            </form>
        </div>
    </section>
    <div class="container">
        @*<div id="emutong_nav">
            <ul>
                <li><a href="#"><img src="../Images/Login/nav-1.jpg" border="0"></a></li>
                <li><a href="#"><img src="../Images/Login/nav-2.jpg" border="0"></a></li>
                <li><a href="#"><img src="../Images/Login/nav-3.jpg" border="0"></a></li>
            </ul>
        </div>*@
    </div>
    <div class="clear"></div>
    <div id="index_foot">©2014 易牧通 @*<a href="#"> 版权所有</a>  |   <a href="#">帮助</a>  |    <a href="#">服务电话</a>  |   <a href="#">公司信息</a>*@</div>
</body>
</html>
