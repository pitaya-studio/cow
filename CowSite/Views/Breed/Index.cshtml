@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>繁殖首页</title>
    <link rel="stylesheet" href="~/ligerUI/skins/Aqua/css/ligerui-all.css">
    <link rel="stylesheet" href="~/Style/base.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/ligerUI/js/ligerui.min.js"></script>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-theme1.min.css">
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Controls/echarts/doc/asset/js/esl/esl.js"></script>
    <script src="~/Scripts/menu.js"></script>
    <script>
        // 路径配置
        require.config({
            paths: {
                'echarts': '../../Controls/echarts/build/echarts',
                'echarts/chart/pie': '../../Controls/echarts/build/echarts'
            }
        });

        $(function () {
            $('#menu').menu({ mainMenuSelectedID: "Breed", subMenuSelectedID: "Breed-Home" });
            loadBreedIndicantGrid();
            loadBreedChart();
        });

        function loadBreedIndicantGrid() {
            $.ajax({
                type: 'get',
                url: '../../Breed/Index/GetBreedIndicant',
                dataType: 'json',
                success: function (data) {
                    var breedIndicantGridManager = $("#breedIndicantGrid").ligerGrid({
                        checkbox: false,
                        columns: [
                            { display: '经产牛平均初产月龄', name: 'Indicant1', type: 'double', width: 50 },
                            { display: '头胎牛平均初产月龄', name: 'Indicant2', type: 'double', width: 50 },
                            { display: '经产牛产后首次发情平均天数(发情间隔)', name: 'Indicant3', type: 'double', width: 50 },
                            { display: '经产牛未孕牛空怀天数', name: 'Indicant4', type: 'double', width: 50 }
                        ],
                        pageSize: 15,
                        width: '100%',
                        height: '100%',
                        isScroll: false,
                        data: data
                    });
                    $("#pageloading").hide();
                }
            });            
        }

        function loadBreedChart() {
            $.ajax({
                type: 'get',
                url: '../../Breed/Index/GetBreedChart',
                dataType: 'json',
                success: function (data) {
                    renderBreedSummary(data.BreedSummary);
                    renderParitySummary(data.ParitySummary);
                }
            });
        }

        function renderBreedSummary(summary) {
            // 使用
            require(
                [
                    'echarts',
                    'echarts/chart/pie' // 使用柱状图就加载bar模块，按需加载
                ],
                function (ec) {
                    // 基于准备好的dom，初始化echarts图表
                    var myChart = ec.init(document.getElementById('chart-breedSummary'));

                    option = {
                        title: {
                            text: '经产牛繁殖状况',
                            subtext: '',
                            x: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            showContent: true,
                            formatter: "{a} <br/>{b} : {c} ({d}%)"
                        },
                        legend: {
                            orient: 'vertical',
                            x: 'left',
                            y: 'top',
                            data: ['未配牛', '已配未检牛', '已孕头数']
                        },
                        toolbox: {
                            show: false,
                            feature: {
                                mark: { show: true },
                                dataView: { show: true, readOnly: false },
                                restore: { show: true },
                                saveAsImage: { show: true }
                            }
                        },
                        calculable: false,
                        series: [
                            {
                                name: '经产牛繁殖状况',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '50%'],
                                data: summary,
                                itemStyle: {
                                    normal: {
                                        label: {
                                            position: 'outer',
                                            formatter: "{b}：{c}"
                                        },
                                        labelLine: {
                                            show: true
                                        }
                                    }
                                },
                            }
                        ],
                        valueConnector: '-'
                    };

                    // 为echarts对象加载数据
                    myChart.setOption(option);

                    var ecConfig = require('echarts/config');
                    myChart.on(ecConfig.EVENT.CLICK, function (param) {
                        alert(param.name + '-' + param.value + '，列表页面开发中。');
                    });
                }
            );
        }

        function renderParitySummary(summary) {
            // 使用
            require(
                [
                    'echarts',
                    'echarts/chart/pie' // 使用柱状图就加载bar模块，按需加载
                ],
                function (ec) {
                    // 基于准备好的dom，初始化echarts图表
                    var myChart = ec.init(document.getElementById('chart-paritySummary'));

                    option = {
                        title: {
                            text: '青年牛繁殖状况',
                            subtext: '',
                            x: 'center'
                        },
                        tooltip: {
                            trigger: 'item',
                            showContent: true,
                            formatter: "{a} <br/>{b} : {c} ({d}%)"
                        },
                        legend: {
                            orient: 'vertical',
                            x: 'left',
                            y: 'top',
                            data: ['未配牛', '已配未检牛', '已孕头数']
                        },
                        toolbox: {
                            show: false,
                            feature: {
                                mark: { show: true },
                                dataView: { show: true, readOnly: false },
                                restore: { show: true },
                                saveAsImage: { show: true }
                            }
                        },
                        calculable: false,
                        series: [
                            {
                                name: '青年牛繁殖状况',
                                type: 'pie',
                                radius: '55%',
                                center: ['50%', '50%'],
                                data: summary,
                                itemStyle: {
                                    normal: {
                                        label: {
                                            position: 'outer',
                                            formatter: "{b}：{c}"
                                        },
                                        labelLine: {
                                            show: true
                                        }
                                    }
                                }
                            }
                        ],
                        valueConnector: '-'
                    };

                    // 为echarts对象加载数据
                    myChart.setOption(option);

                    var ecConfig = require('echarts/config');
                    myChart.on(ecConfig.EVENT.CLICK, function (param) {
                        alert(param.name + '-' + param.value + '，列表页面开发中。');
                    });
                }
            );
        }
    </script>
</head>
<body>
    <div class="container">
        <div id="menu"></div>
        <div class="content">
            <div id="breedIndicantGrid" class="displayBlock ml5 mr5"></div>
            <div id="message"></div>
            <div class="l-loading" id="pageloading"></div>
            <div style="margin-top: 20px;">
                <div id="chart-breedSummary" style="height: 350px; width: 450px; display: inline-block; "></div>
                <div id="chart-paritySummary" style="height: 350px; width: 450px; display: inline-block; "></div>
            </div>
        </div>
    </div>
</body>
</html>
