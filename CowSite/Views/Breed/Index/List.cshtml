@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>繁殖子系统</title>
    <link rel="stylesheet" type="text/css" href="../../ligerUI/skins/Aqua/css/ligerui-all.css">
    <link rel="stylesheet" type="text/css" href="../../Style/base.css">
    <script type="text/javascript" src="../../Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="../../ligerUI/js/ligerui.min.js"></script>
    <link rel="stylesheet" href="../../bootstrap/css/bootstrap-theme1.min.css">
    <script type="text/javascript" src="../../bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Controls/echarts/doc/asset/js/esl/esl.js"></script>
    <script type="text/javascript">
        $(function () {
            InitBtnEvent();
            loadCowList();
        })

        var cowGroupGridManager;
        function loadCowList() {
            cowGroupGridManager = $("#cowGrid").ligerGrid({
                checkbox: true,
                columns: [
                    { display: '耳号', name: 'DisplayEarNum', align: 'left', minWidth: 140 },
                    { display: '牛群', name: 'GroupName', align: 'left', minWidth: 60 },
                    { display: '状态', name: 'Status', align: 'left', minWidth: 60 },
                    { display: '月龄', name: 'AgeMonth', align: 'left', minWidth: 140 },
                    { display: '泌乳天数', name: 'Color', align: 'left', minWidth: 100 }
                ],
                pageSize: 15,
                width: '100%',
                height: '100%',
                url: "../../Breed/Index/GetCowList"
            });
            $("#pageloading").hide();
        }

        function InitBtnEvent() {
            $('#btnInsemination').ligerButton({
                width: 80,
                text: '发情配种',
                disabled: false,
                click: function () {
                    var row = cowGroupGridManager.getSelectedRow();
                    var editUrl = "../../Breed/Insemination/Edit";
                    if (row) {
                        editUrl += "/" + row["EarNum"];
                    }
                    $.ligerDialog.open({ title: "配种信息编辑", height: 430, width: 450, url: editUrl });
                },
                icon: null
            });

            $('#btnInseminationAssign').ligerButton({
                width: 80,
                text: '配种分配',
                disabled: false,
                click: function () {
                    $.ligerDialog.open({
                        title: "配种分配",
                        height: 430,
                        width: 450,
                        url: "../../Breed/Insemination/Assign"
                    });
                },
                icon: null
            });

            $('#btnInitialInspection').ligerButton({
                width: 80,
                text: '初检',
                disabled: false,
                click: function () {
                    var row = cowGroupGridManager.getSelectedRow();
                    var editUrl = "../../Breed/InitialInspection/Edit";
                    if (row) {
                        editUrl += "/" + row["EarNum"];
                    }
                    $.ligerDialog.open({ title: "初检", height: 430, width: 450, url: editUrl });
                },
                icon: null
            });

            $('#btnReInspection').ligerButton({
                width: 80,
                text: '复检',
                disabled: false,
                click: function () {
                    var row = cowGroupGridManager.getSelectedRow();
                    var editUrl = "../../Breed/ReInspection/Edit";
                    if (row) {
                        editUrl += "/" + row["EarNum"];
                    }
                    $.ligerDialog.open({ title: "复检", height: 430, width: 450, url: editUrl });
                },
                icon: null
            });

            $('#btnForbidden').ligerButton({
                width: 80,
                text: '禁配',
                disabled: false,
                click: function () {
                    var row = cowGroupGridManager.getSelectedRow();
                    var editUrl = "../../Breed/ForbidInsemination/Edit";
                    if (row) {
                        editUrl += "/" + row["EarNum"];
                        $.ligerDialog.open({ title: "禁配", height: 430, width: 450, url: editUrl });
                    }
                },
                icon: null
            });

            $('#btnUndoForbidden').ligerButton({
                width: 80,
                text: '解禁',
                disabled: false,
                click: function () {
                    var row = cowGroupGridManager.getSelectedRow();
                    var editUrl = "../../Breed/UnforbidInsemination/Edit";
                    if (row) {
                        editUrl += "/" + row["EarNum"];
                        $.ligerDialog.open({ title: "解禁", height: 430, width: 450, url: editUrl });
                    }
                },
                icon: null
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="header mt10 mb10">
            <div class="btn-group">
                <img src="../../Images/emutong_logo.png" style="width:164px; height:33px;" />
            </div>
            <div class="btn-group">
                <ul class="nav nav-pills">
                    <li><a href="../../Home/Index">首页</a></li>
                    <li><a href="javascript:void(0);">任务</a></li>
                    <li class="active"><a href="javascript:void(0);">繁殖</a></li>
                    <li><a href="../../Feed/Index/List">饲养</a></li>
                    <li><a href="../../Milk/Index/List">奶厅</a></li>
                    <li><a href="../../Medical/Index/List">兽医</a></li>
                    <li><a href="../../Platform/Formula/List">平台</a></li>
                    <li><a href="../../Users/Index/List">场长</a></li>
                </ul>
            </div>
        </div>
        <div class="ml5 mt5 mb5">
            <div class="btn-group">
                <div id="btnInsemination"></div>
            </div>
            <div class="btn-group">
                <div id="btnInseminationAssign"></div>
            </div>
            <div class="btn-group">
                <div id="btnInitialInspection"></div>
            </div>
            <div class="btn-group">
                <div id="btnReInspection"></div>
            </div>
            <div class="btn-group">
                <div id="btnForbidden"></div>
            </div>
            <div class="btn-group">
                <div id="btnUndoForbidden"></div>
            </div>
        </div>
        <div id="cowGrid" class="displayBlock ml5 mr5"></div>
        <div id="message"></div>
        <div class="l-loading" id="pageloading"></div>
    </div>
</body>
</html>
