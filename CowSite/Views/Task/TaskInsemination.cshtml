@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>发情/配种任务单</title>
    <link rel="stylesheet" href="~/ligerUI/skins/Aqua/css/ligerui-all.css">
    <link rel="stylesheet" href="~/Style/base.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/ligerUI/js/ligerui.min.js"></script>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-theme1.min.css">
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/menu.js"></script>  
    <script type="text/javascript">       
        $(function () {
            $('#menu').menu({ mainMenuSelectedID: "Task", subMenuSelectedID: "Task-Insemination" });
        })
    </script>
</head>
<body>
    <div class="container">
        <div id="menu"></div>
        <div class="content">
            <div>发情/配种任务单</div>
            <div>
                <form action="../../TaskInsemination/SaveTask" method="post">
                    <div>任务单类型: 发情配种任务单</div>
                    <div>任务指导: 请观测牛群发情状况，并给发情牛配种。</div>
                    <br />
                    <div>任务开始时间: <input type="date" id="startDate" /></div>
                    <div>任务完成时间: <input type="date" id="endDate" /></div>
                    <br />
                    <div>牛耳号: <input id="earNum"></input></div>
                    <div>操作人员：<input name="operatorName" /></div>
                    <div>
                        发情发现方式：
                        <select name="knownWay">
                            <option value="0">计步器</option>
                            <option value="1">发请贴</option>
                            <option value="2">观测</option>
                        </select>
                    </div>
                    <div>冻精编号: <input id="semenNum"></input></div>
                    <div>冻精支数: <input id="semenCount"></input></div>
                    <div>说明备注: <input id="desc"></input></div>
                    <button type="submit">提交</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
