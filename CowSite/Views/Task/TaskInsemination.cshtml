@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>发情/配种任务单</title>
    <link rel="stylesheet" href="../../bootstrap/css/bootstrap-theme1.min.css">
    <link rel="stylesheet" href="../../ligerUI/skins/Aqua/css/ligerui-all.css">
    <link rel="stylesheet" href="../../Style/base.css">
    <link rel="stylesheet" href="../../Style/Home/Index.css">
    <script src="../../Scripts/jquery-1.10.2.min.js"></script>
    <script src="../../bootstrap/js/bootstrap.min.js"></script>
    <script src="../../Controls/echarts/doc/asset/js/esl/esl.js"></script>
    <script src="../../ligerUI/js/ligerui.min.js"></script>
    <script type="text/javascript">
        var taskID = "@ViewBag.TaskID";

        $(function () {
            loadTask();
        })

        function loadTask() {
            $.ajax({
                type: 'get',
                url: "../../TaskInsemination/LoadTask",
                data: { taskID: taskID },
                dataType: "json",
                cache: false
            }).success(function (taskData) {
                $('#instruction').text(taskData.Instruction);
                $('input[name=operatorName]').val(taskData.EarNum);
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <div>发情/配种任务单</div>
        <div>
            <form action="../../TaskInsemination/SaveTask" method="post">
                <div>任务指导：<span id="instruction"></span></div>
                <div>牛耳号：<input name="earNum" /></div>
                <div>操作人员：<input name="operatorName" /></div>
                <button type="submit">提交</button>
            </form>
        </div>
    </div>
</body>
</html>
